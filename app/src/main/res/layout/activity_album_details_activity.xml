<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Album_details_activity"
    android:background="@color/dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight = "0.6"
        android:id="@+id/toolbar_Albums"
        android:padding = "10dp"
        android:background="@drawable/action_bar_shape">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_centerVertical="true"
            android:id="@+id/backbutton_settings"/>
        <TextView
            android:id = "@+id/time"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_marginLeft = "10dp"
            android:text = "Album"
            android:textSize = "20sp"
            android:layout_centerHorizontal="true"
            android:textColor = "@color/white"
            android:textStyle = "bold"
            android:layout_centerVertical="true"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_below="@+id/toolbar_Albums">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/gg">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_baseline_album_24"
                android:id="@+id/album_art"
                >
            </ImageView>


        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/album_name"
            android:layout_below="@+id/gg"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="Album_name"
            android:maxLines="1"
            android:textAlignment="center"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@id/album_name"
            android:id="@+id/song_list"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/dark"
        android:id="@+id/album_shortcut"
        android:onClick="song_details"
        tools:ignore="OnClick"
        android:layout_alignParentBottom="true">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/card">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/art_album_albums"
                android:src="@drawable/ic_baseline_music_note_24"
                android:background="@color/white"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_song_album"
            android:layout_toRightOf="@+id/card"
            android:text="song name"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_artist_album"
            android:text="Artist"
            android:layout_below="@id/name_song_album"
            android:layout_toRightOf="@+id/card"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/playbutton_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_pause_circle_filled_24"
            android:onClick="playbtn"
            tools:ignore="OnClick" />

        <ImageView
            android:id="@+id/skipbutton_album"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/playbutton"
            android:onClick="skip"
            android:src="@drawable/ic_baseline_skip_next_24"
            tools:ignore="OnClick" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/playertop"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</RelativeLayout>